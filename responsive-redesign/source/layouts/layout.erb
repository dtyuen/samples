  <script>window.jQuery || document.write('<script src="<%= current_page.data.relativePath %>js/vendor/jquery-1.7.2.min.js"><\/script>')</script>

  <% if content_for?(:scripts) %>  
    <%= yield_content :scripts %>
  <% end %>
  <!--script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script-->
  <%= javascript_include_tag 'vendor/bootstrap.min', 'plugins', 'main' %>

  <!--[if lt IE 9]>
